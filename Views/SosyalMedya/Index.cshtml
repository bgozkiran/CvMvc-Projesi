@using CvMvc.Models.Entity
@model List<TblSosyalMedya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html>


<body class="hold-transition sidebar-mini">


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Sosyal Medya Hesap Listem</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Sosyal Medya Hesabı Ekle</button>
                            <br />
                            <br />
                            <table class="table table-bordered">

                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>SosyalMedya</th>
                                        <th>Durum</th>
                                        <th>Düzenle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{ string durum = "";}

                                    @{ string buttonRenk = "";}

                                    @{ string buttonYazi = "";}

                                    @{ string buttonIkon = "";}


                                    @foreach (var item in Model)
                                    {
                                        if (item.Durum == true)
                                        {
                                            durum  =  "Aktif";
                                            buttonRenk = "btn btn-danger btn-sm";
                                            buttonYazi = "Pasif Et";
                                            buttonIkon = "fas fa-trash";
                                        }
                                        else
                                        {
                                            durum = "pasif";
                                            buttonRenk = "btn btn-success btn-sm";
                                            buttonYazi = "Aktif Et";
                                            buttonIkon = "fas fa-upload";
                                        }



                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Ad</td>
                                            <td>@durum </td>

                                            <td>
                                                <a class="btn btn-info btn-sm" href="/SosyalMedya/SayfaGetir/@item.ID">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </a>
                                            </td>
                                            <td>
                                                <a class="@buttonRenk" href="/SosyalMedya/Sil/@item.ID">
                                                    <i class="@buttonIkon">
                                                    </i>
                                                    @buttonYazi
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="modal" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="Modal1Label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form method="post" action="/SosyalMedya/Ekle">
                    <div class="modal-header">
                        <h5 class="modal-title" id="Modal1Label">Sosyal Medya Ekleme Penceresi</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="Ad">Sosyal Medya İsmi</label>
                            <input type="text" id="Ad" name="Ad" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="Link">Sosyal Medya Linki</label>
                            <input type="text" id="Link" name="Link" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="İkon">İkon Değeri</label>
                            <input type="text" id="İkon" name="İkon" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>



