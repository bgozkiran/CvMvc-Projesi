@using CvMvc.Models.Entity
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">


                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->

                                    <div class="time-label">
                                        <span class="bg-success">
                                            <a href="/Sertifika/SertifikaEkle/">Sertifika Ekle</a>
                                        </span>
                                    </div>
                                    @foreach (var item in Model)
                                    {
                                        <div>
                                            <i class="fas fa-comment bg-primary"></i>

                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Kategori : @item.Aciklama
                                                </div>
                                                <div class="timeline-footer">

                                                    <a href="/Sertifika/SertifikaDuzenle/@item.ID" class="btn btn-primary btn-sm">Düzenle</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


