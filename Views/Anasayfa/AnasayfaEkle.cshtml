@model CvMvc.Models.Entity.TblAnasayfa
@{
    ViewBag.Title = "AnasayfaEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Anasayfa Bilgileri Ekle</h4>
<br />
<form class="form-group" method="post">
    <label>Resim</label>
    <input type="text" name="Resim" class="form-control" placeholder="Resim yolu" />
    <br />
