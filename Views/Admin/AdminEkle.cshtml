@model CvMvc.Models.Entity.TblAdmin
@{
    ViewBag.Title = "AdminEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Ekleme Sayfası </h2>

<br />
<form method="post">
    <label>Kullanıcı Adı</label>
    <input type="text" name="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adınız" />
    @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @style = "color:red" })
    <br />
    <label>Şifre</label>
    <input type="password" name="Sifre" class="form-control" placeholder="Şifreniz" />
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>