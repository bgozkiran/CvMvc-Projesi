@using CvMvc.Models.Entity
@model List<Tblİletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesaj Listesi</h3>

                        </div>

                        <div class="card-body p-0">
                            <div class="mailbox-controls">
                            </div>
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover table-striped">
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="icheck-primary">
                                                        <input type="checkbox" value="" id="check1">
                                                        <label for="check1"></label>
                                                    </div>
                                                </td>
                                                <td class="mailbox-star"><a href="/İletisim/MesajSil/@item.ID"><i class="fas fa-star text-warning"></i></a></td>
                                                <td class="mailbox-date" style="color:forestgreen">
                                                    @(((DateTime)item.Tarih).ToString("dd-MMM-yyy"))
                                                </td>
                                                <td class="mailbox-name">@item.AdSoyad</td>
                                                <td class="mailbox-subject">
                                                    <b>@item.Konu </b> - @item.Mesaj
                                                </td>
                                                <td class="mailbox-attachment"></td>
                                                <td class="mailbox-name" style="text-align: right;">@item.Mail</td>
                                            </tr>


                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card-footer p-0">
                            <div class="mailbox-controls">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-sm"><i class="far fa-desktop"></i> Detay Göster</button>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </section>
    </div>
</body>
</html>




